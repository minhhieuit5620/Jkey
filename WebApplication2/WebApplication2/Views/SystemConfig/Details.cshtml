@{
    ViewData["Title"] = "Configuration Information";
}
@model WebApplication2.Models.SystemConfig


@if (Model == null)
{
    <div class="pagetitle">
        <h1> Not Data</h1>
    </div>
}
else
{
    <div class="pagetitle">
        <h1>Configuration Information</h1>
    </div>

    <!-- End Page Title -->

    <section class="section">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Configuration Information</h5>

                <!-- Vertical Form -->
                <form  class="row g-3">
                    <div class="col-sm-5 col-xs-12">
                        <label for="inputConfigName" class="form-label">Config Name</label>
                        <input type="text" class="form-control" disabled value="@Model.Name" id="inputConfigName">
                    </div>
                    <div class="col-sm-5 col-xs-12">
                        <label for="inputConfigType" class="form-label">Config Type</label>
                        <input type="text" class="form-control" disabled value="@Model.Type" id="inputConfigType">
                    </div>
                    <div class="col-sm-8 col-xs-12">
                        <label for="inputConfigValue" class="form-label">Config Value</label>
                        <input type="text" class="form-control" disabled value="@Model.Value" id="inputConfigValue">
                    </div>
                    <div class="col-sm-2 col-xs-12">
                        <label for="selectStatus" class="form-label">Status</label>
                        <select class="form-select" disabled id="selectStatus" required="">
                            @if (Model.Active == true)
                            {
                                <option selected="true" value="true">Active</option>
                                <option value="false">Inactive</option>
                            }
                            else
                            {
                                <option value="true">Active</option>
                                <option selected="true" value="false">Inactive</option>
                            }

                        </select>
                    </div>
                    <div class="col-sm-12 col-xs-12">
                        <label for="textareaConfigDes" class="form-label">Config Description</label>
                        <div class="col-sm-10 col-xs-12 ">
                            <textarea id="textareaConfigDes" disabled class="form-control" style="height: 100px">@Model.Description</textarea>
                        </div>
                    </div>
                    <div>
                       

                        <a href="/SystemConfig/Index" class="btn btn-secondary ">
                            Back
                        </a>

                    </div>
                </form>

            </div>
        </div>

    </section>
}
